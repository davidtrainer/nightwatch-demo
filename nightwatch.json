{
  "src_folders": [
    "tests"
  ],
  "page_objects_path": "page-objects",
  "globals_path": "globals.js",
  "webdriver": {
    "start_process": true,
    "server_path": "node_modules/.bin/chromedriver",
    "port": 9516
  },
  "test_settings": {
    "default": {
      "desiredCapabilities": {
        "browserName": "chrome",
        "chromeOptions": {
          "args": [
            "window-size=1920,1080",
            "headless"
          ]
        }
      },
      "screenshots": {
        "enabled": true,
        "on_failure": true,
        "on_error": true,
        "path": "screenshots/"
      }
    },
    "local": {
      "desiredCapabilities": {
        "browserName": "chrome",
        "chromeOptions": {
          "args": [
            "window-size=1920,1080",
            "ignore-certificate-errors",
            "headless"
          ]
        }
      }
    },
    "dev": {},
    "test": {},
    "prod": {}
  }
}